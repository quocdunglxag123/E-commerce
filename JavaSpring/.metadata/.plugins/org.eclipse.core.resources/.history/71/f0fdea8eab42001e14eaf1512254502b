package com.ecommerce.storesystem.mapstruct;

import org.mapstruct.Mapper;

import com.ecommerce.storesystem.dto.AccountDto;
import com.ecommerce.storesystem.entity.AccountEntity;

@Mapper(componentModel = "spring")
public interface AccountMapper {
	// ----------------------------Entity To DTO---------------------------

	AccountDto accountToAccountDto(AccountEntity account);
	
	AccountNoPassDto accountToAccountNoPassDto(AccountEntity account);

	List<AccountDto> accountsToAccountDtos(List<Account> accounts);
	
	List<AccountNoPassDto> accountsToAccountNoPassDtos(List<Account> accounts);


	// ---------------------------DTO To Entity----------------------

	Account accountDtoToAccount(AccountDto accountDto);
	

}
